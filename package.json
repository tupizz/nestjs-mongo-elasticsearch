{
  "name": "nest-mongoose-boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "msanvarov",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nest start --debug 0.0.0.0:9229 --watch",
    "start:prod": "node dist/main.js",
    "typedocs": "npx compodoc -p tsconfig.json -s -d docs",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "@hapi/joi": "17.1.1",
    "@nestjs/common": "7.6.18",
    "@nestjs/core": "7.6.18",
    "@nestjs/jwt": "7.2.0",
    "@nestjs/mongoose": "7.2.4",
    "@nestjs/passport": "7.1.6",
    "@nestjs/platform-express": "7.6.18",
    "@nestjs/platform-fastify": "7.6.18",
    "@nestjs/swagger": "4.8.2",
    "@nestjs/typeorm": "7.1.5",
    "axios": "^0.21.1",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "crypto": "1.0.1",
    "dotenv": "10.0.0",
    "express-rate-limit": "5.3.0",
    "fastify": "^3.18.1",
    "fastify-helmet": "5.3.1",
    "fastify-rate-limit": "5.5.0",
    "fastify-swagger": "4.8.2",
    "gravatar": "1.8.1",
    "helmet": "4.6.0",
    "mongoose": "5.13.1",
    "nest-access-control": "2.0.2",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.7",
    "stream-json": "^1.7.2",
    "swagger-ui-express": "4.1.6",
    "typeorm": "0.2.34",
    "winston": "3.3.3",
    "winston-daily-rotate-file": "4.5.5"
  },
  "devDependencies": {
    "@compodoc/compodoc": "1.1.11",
    "@nestjs/testing": "7.6.18",
    "@types/axios": "^0.14.0",
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.12",
    "@types/gravatar": "1.8.2",
    "@types/hapi__joi": "17.1.6",
    "@types/jest": "26.0.23",
    "@types/mongoose": "5.11.96",
    "@types/node": "14.17.4",
    "@types/stream-json": "^1.7.1",
    "@types/supertest": "2.0.11",
    "chai": "4.3.4",
    "jest": "26.6.3",
    "nodemon": "2.0.9",
    "prettier": "2.3.2",
    "supertest": "6.1.3",
    "ts-jest": "26.5.6",
    "ts-loader": "9.2.3",
    "ts-node": "10.0.0",
    "tsc-watch": "4.4.0",
    "tsconfig-paths": "3.9.0",
    "tslint": "6.1.3",
    "typescript": "4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
